<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginRight="104dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_goods_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/iv_goods_logo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="钢铁"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/selling_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="很不错，很耐用"
            android:layout_marginTop="3dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_goods_sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月售747"
            android:layout_marginTop="3dp"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥43"
                android:textSize="12sp"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/tv_member_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="会员价"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="限5份"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_sku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选规格"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_notic"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="2dp"
        android:textSize="10sp"
        android:paddingBottom="2dp"
        android:layout_marginRight="10dp"/>

</RelativeLayout>